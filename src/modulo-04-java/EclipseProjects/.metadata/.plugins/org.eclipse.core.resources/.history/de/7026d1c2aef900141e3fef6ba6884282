package filmator;

public enum Genero {
	COMEDIA("Comédia"), 
	ACAO("Ação"), 
	TERROR("Terror"), 
	AVENTURA("Aventura"), 
	FICCAO("Ficção"), 
	SUSPENSE("Suspense");
	
 private String nome;
 private int visualizacoes;
	
	private Genero(String nome){
		this.nome = nome;
	}
	
	public String getNome() {
		return nome;
	}
	public int getVisualizacoes() {
		return visualizacoes;
	}
	
	public void visualiza() {
		this.visualizacoes++;
	}
}
